<div class="container">
	<h2 class="title-lg">Update your profile</h2>

	<div class="mt">
		<% @user.errors.full_messages.each do |message| %>
			<p class="mb-sm text-red"><%= message %></p>
		<% end %>
	</div>

	<div class="mt-lg">
		<%= form_with model: @user, data: { turbo: false } do |form| %>
			<p><%= form.label :name, 'Your name' %></p>
			<p><%= form.text_field :name, class: 'form-text-field' %></p>
			
			<p class="mt"><%= form.label :nickname, 'Your nickname' %></p>
			<p><%= form.text_field :nickname, class: 'form-text-field' %></p>
			
			<p class="mt text-sm">
				If you don't want to change your password, leave fields below empty.
			</p>

			<p class="mt-sm"><%= form.label :password %></p>
			<p><%= form.password_field :password, class: 'form-text-field' %></p>

			<p class="mt"><%= form.label :password_confirmation %></p>
			<p><%= form.password_field :password_confirmation, class: 'form-text-field' %></p>

			<p class="mt"><%= form.label :navbar_color %></p>
			<p><%= form.color_field :navbar_color, class: 'color-field' %></p>

			<p class="mt-lg">
				<%= form.submit 'Update', class: 'button button-main' %> / 
				<%= link_to 'return', :back %>		
			</p>
		<% end %>
	</div>

	<div class="mt">
		<%= button_to 'Delete my account', user_path(@user), method: :delete,
		data: { turbo_confirm: 'Are you sure?' } %>
	</div>
</div>
