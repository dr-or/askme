<div class="mt">
	<% question.errors.full_messages.each do |message| %>
		<p class="mb-sm text-red"><%= message %></p>
	<% end %>	
</div>

<%= form_with model: question, data: { turbo: false } do |form| %>
	<%= form.hidden_field :user_id %>

	<p class="mt"><%= form.label :body, 'Your question:' %></p>
	<p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>
	
	<p class="mt">
		<%= form.submit 'Submit', class: 'button button-main' %> or <%= link_to 'return', :back %>	
	</p>
<% end %>
