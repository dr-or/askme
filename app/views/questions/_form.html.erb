<%= form_with model: question do |form| %>
	<p class="mt"><%= form.label :body, 'Your question:' %></p>
	<p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>
	<p class="mt"><%= form.label :user_id %></p>
	<p><%= form.number_field :user_id, class: 'form-text-field text' %></p>
	<p class="mt">
		<%= form.submit 'Submit', class: 'button button-main' %> or <%= link_to 'return', :back %>	
	</p>
<% end %>
