<h2 class="title-lg">Edit the question</h2>

<%= form_with model: @question do |form| %>
	<p class="mt"><%= form.label :body, 'Your question:' %></p>
	<p><%= form.text_area :body, rows: 5 %></p>
	<p class="mt"><%= form.label :user_id %></p>
	<p><%= form.text_area :user_id %></p>
	<p class="mt"><%= form.submit %></p>
<% end %>
